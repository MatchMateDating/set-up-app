# Backend Environment Variables Template
# Copy this file to .env in the backend directory and fill in your actual values
# The .env file is gitignored and won't be committed to the repository
#
# To create your .env file:
#   cp env.template .env
#   # Then edit .env with your actual values

# ============================================================================
# Flask Configuration
# ============================================================================
FLASK_APP=app:create_app
FLASK_ENV=development
PORT=5000

# ============================================================================
# Application Secrets (Optional for local dev, REQUIRED for production)
# ============================================================================
# For local development: These are optional - defaults will be used if not set
# For production: MUST set strong random keys for security
# Generate strong random keys:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=dev-secret-key-change-in-production
# JWT_SECRET_KEY=super-secret-key-change-in-production

# ============================================================================
# Database Configuration
# ============================================================================
# For local development, leave these EMPTY to use SQLite (recommended)
# Only uncomment these if you have PostgreSQL running locally
# DB_USERNAME=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=railway

# ============================================================================
# Email Service Configuration
# ============================================================================
# Primary: Resend (currently used for all emails)
RESEND_API_KEY=your_resend_api_key

# Optional: AWS SES (alternative email service, not currently used)
# SES_SNS_KEY=your_aws_access_key_id_from_grainygains_user
# SES_SNS_SECRET=your_aws_secret_access_key_from_grainygains_user
# SES_SENDER_EMAIL=your_verified_sender_email
# AWS_REGION=us-east-2
# AWS_PROFILE=grainygains

# ============================================================================
# Cloudflare R2 Storage Configuration
# ============================================================================
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com

# CDN Configuration
# Your custom domain configured in Cloudflare R2 to serve images
CDN_BASE_URL=https://cdn.yourdomain.com/images

# Storage Environment Prefix
# Set to 'dev' for development, 'prod' for production, or leave empty
STORAGE_ENV_PREFIX=dev

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=*

# ============================================================================
# Test Mode Configuration
# ============================================================================
# Enable test mode to skip email verification for test email addresses
# Only use in development/testing, NOT in production
TEST_MODE_ENABLED=false
TEST_EMAIL_DOMAINS=@test.com,@example.com,@test.local

# ============================================================================
# Other Services
# ============================================================================
# OpenAI (for AI embeddings)
OPENAI_API_KEY=your_openai_api_key

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:3000

# API Base URL (for email verification links)
API_BASE_URL=http://localhost:5000

# Signup URL (for referral links)
SIGNUP_URL=test_url
